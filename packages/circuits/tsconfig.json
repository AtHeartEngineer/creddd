{
  "include": ["./tests/"],
  "exclude": ["./jest.config.js", "./node_modules"],
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
